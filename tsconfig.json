{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "bin",
        "config",
        "docker",
        "fixtures",
        "public",
        "src",
        "templates",
        "tests",
        "translations",
        "var",
        "vendor"
    ],
    "typeRoots" : ["./"]
}
